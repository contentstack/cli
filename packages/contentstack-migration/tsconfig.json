{
  "compilerOptions": {
    "baseUrl": ".",
    "declaration": true,
    "importHelpers": true,
    "module": "commonjs",
    "rootDir": "src",
    "outDir": "lib",
    "strict": false,
    "target": "es2017",
    "allowJs": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "inlineSources": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "lib": [
      "ES2019",
      "es2020.promise"
    ],
    "strictPropertyInitialization": false,
    "forceConsistentCasingInFileNames": true,
    "composite": true
  },
  "include": [
    "src/**/*",
    "types/*"
  ],
  "exclude": [
    "node_modules",
    "lib"
  ],
  "ts-node": {
    "transpileOnly": false,
    "files": true,
    "compilerOptions": {
      "sourceMap": true
    }
  }
}
