{
  "compilerOptions": {
    "declaration": true,
    "importHelpers": true,
    "module": "commonjs",
    "outDir": "lib",
    "rootDir": "src",
    "strict": false,
    "target": "es2017",
    "allowJs": true,
    "sourceMap": false,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "lib": [
      "ES2019",
      "es2020.promise"
    ],
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "src/**/*.d.ts"
  ]
}