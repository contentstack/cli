{
  "simpleContentType": {
    "uid": "simple_ct",
    "title": "Simple Content Type",
    "description": "A simple content type with basic fields",
    "schema": [
      {
        "uid": "title",
        "data_type": "text",
        "display_name": "Title",
        "mandatory": true,
        "unique": true
      },
      {
        "uid": "description",
        "data_type": "text",
        "display_name": "Description",
        "mandatory": false
      },
      {
        "uid": "number_field",
        "data_type": "number",
        "display_name": "Number Field",
        "mandatory": false
      }
    ],
    "options": {
      "title": "title",
      "singleton": false
    },
    "field_rules": [
      {
        "uid": "rule_1",
        "conditions": [
          {
            "field_uid": "title",
            "operator": "is_not_empty"
          }
        ],
        "actions": [
          {
            "field_uid": "description",
            "action": "show"
          }
        ]
      }
    ]
  },
