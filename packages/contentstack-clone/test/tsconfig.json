{
  "compilerOptions": {
    "baseUrl": "..",
    "declaration": false,
    "module": "commonjs",
    "target": "es2017",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "noImplicitAny": false,
    "lib": [
      "ES2019",
      "es2020.promise"
    ],
    "strictPropertyInitialization": false,
    "forceConsistentCasingInFileNames": true,
    "types": ["mocha", "node", "@types/chai", "@types/sinon"]
  },
  "include": [
    "**/*.ts",
    "../src/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
